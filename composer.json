{
    "name": "nhockizi/yii2-widget-datatables",
    "description": "DataTables widget for Yii2",
    "type": "yii2-extension",
    "keywords": ["yii2","extension","jquery","datatables","table","javascript","library"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/nhockizi/yii2-widget-datatables/issues?state=open",
        "source": "https://github.com/nhockizi/yii2-widget-datatables"
    },
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Lâm Xuân Bảo",
            "email": "nhockizi@gmail.com",
            "country": "Viet Nam"
        }
    ],
    "require": {
        // "bower-asset/datatables":">=1.9.4",
        // "bower-asset/datatables-bootstrap3":"*",        
        // "bower-asset/datatables-tabletools":"*",
        "bower-asset/nhockizi-datatables" : "*"
    },
    "autoload": {
        "psr-4": {
            "nhockizi\\widgets\\": ""
        }
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "nhockizi-library": "vendor/bower"
        }
    },
    "scripts": {
        "post-install-cmd": "php init --env=Development --overwrite=n"
    }
}